{% extends 'ArcherMeetEntryBundle::layout.html.twig' %}

{% block body -%}
    <h1>Athlete list</h1>
    <div class="table-responsive">
    <table class="table records_list table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Date_of_birth</th>
                <th>Graduation_year</th>
                <th>Grade</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('athlete_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{% if entity.dateofbirth %}{{ entity.dateofbirth|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.graduationyear %}{{ entity.graduationyear|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.grade }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('athlete_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('athlete_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
        <ul>
        <li>
            <a href="{{ path('athlete_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
